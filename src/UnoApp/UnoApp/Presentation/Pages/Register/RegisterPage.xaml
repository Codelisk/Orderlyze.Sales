<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="UnoApp.Presentation.Pages.Register.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:UnoApp.Presentation.Pages.Register"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      xmlns:utu="using:Uno.Toolkit.UI"
      mc:Ignorable="d"
      NavigationCacheMode="Required">

    <Grid>
        <ScrollViewer>
            <StackPanel Padding="20" 
                        MaxWidth="400" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center">
                
                <!-- Logo or App Title -->
                <TextBlock Text="Orderlyze"
                          FontSize="32"
                          FontWeight="Bold"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,40" />

                <TextBlock Text="Registrieren"
                          FontSize="24"
                          FontWeight="SemiBold"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,30" />

                <!-- Email Input -->
                <TextBlock Text="E-Mail"
                          Margin="0,0,0,8" />
                <TextBox x:Name="EmailTextBox"
                         Text="{Binding Email, Mode=TwoWay}"
                         PlaceholderText="ihre.email@beispiel.de"
                         Margin="0,0,0,16" />

                <!-- Password Input -->
                <TextBlock Text="Passwort"
                          Margin="0,0,0,8" />
                <PasswordBox x:Name="PasswordBox"
                             Password="{Binding Password, Mode=TwoWay}"
                             PlaceholderText="Passwort eingeben"
                             Margin="0,0,0,16" />

                <!-- Confirm Password Input -->
                <TextBlock Text="Passwort bestÃ¤tigen"
                          Margin="0,0,0,8" />
                <PasswordBox x:Name="ConfirmPasswordBox"
                             Password="{Binding ConfirmPassword, Mode=TwoWay}"
                             PlaceholderText="Passwort wiederholen"
                             Margin="0,0,0,24" />

                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}"
                          Foreground="Red"
                          TextWrapping="Wrap"
                          Visibility="{Binding HasError, Converter={StaticResource BoolToVisibilityConverter}}"
                          Margin="0,0,0,16" />

                <!-- Register Button -->
                <Button Content="Registrieren"
                        Command="{Binding RegisterCommand}"
                        IsEnabled="{Binding CanRegister}"
                        HorizontalAlignment="Stretch"
                        Margin="0,0,0,16" />

                <!-- Progress Ring -->
                <ProgressRing IsActive="{Binding IsLoading}"
                             HorizontalAlignment="Center"
                             Margin="0,0,0,16" />

                <!-- Login Link -->
                <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Center">
                    <TextBlock Text="Bereits registriert?" />
                    <HyperlinkButton Content="Zur Anmeldung"
                                   Command="{Binding NavigateToLoginCommand}"
                                   Margin="5,0,0,0" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>